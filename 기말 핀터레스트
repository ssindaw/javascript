<!-- Add a modal for displaying the larger image -->
<div class="pin-modal" id="pinModal">
  <img id="modalImage" src="" alt="Modal Pin">
</div>

<script>
  // Get all elements with class 'pin-item'
  const pins = document.querySelectorAll('.pin-item');

  // Get modal and modal image elements
  const modal = document.getElementById('pinModal');
  const modalImage = document.getElementById('modalImage');

  // Add click event listener to each pin
  pins.forEach(pin => {
    pin.addEventListener('click', function() {
      // Get the source of the clicked pin's image
      const imageUrl = this.querySelector('img').src;

      // Set the source of the modal image
      modalImage.src = imageUrl;

      // Show the modal
      modal.style.display = 'flex';
    });
  });

  // Add click event listener to close the modal when clicking outside the image
  modal.addEventListener('click', function(event) {
    if (event.target === this) {
      modal.style.display = 'none';
    }
  });
</script>

